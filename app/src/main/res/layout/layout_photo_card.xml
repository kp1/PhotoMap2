<?xml version="1.0" encoding="utf-8"?>
<net.mmho.photomap2.PhotoCardLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/SelectableItem">
   <RelativeLayout
       android:id="@+id/thumbnail_frame"
       android:layout_width="96dp"
       android:layout_height="96dp"
       android:padding="4dp"
       android:layout_alignParentStart="true"
       android:layout_alignParentLeft="true">
       <net.mmho.photomap2.ThumbnailImageView
            android:id="@+id/thumbnail"
            android:src="@android:drawable/ic_menu_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"/>
       <FrameLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:layout_alignParentEnd="true"
           android:layout_alignParentRight="true"
           android:paddingLeft="4dp"
           android:paddingRight="4dp"
           android:background="@drawable/badge">
           <TextView
               android:id="@+id/count"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:typeface="monospace"
               android:textStyle="bold"
               android:textColor="@android:color/white"/>
       </FrameLayout>

   </RelativeLayout>


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/thumbnail_frame"
        android:layout_toRightOf="@+id/thumbnail_frame"
        android:layout_centerVertical="true"
        style="@style/Text.Title"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/thumbnail_frame"
        android:layout_toRightOf="@id/thumbnail_frame"
        android:layout_toStartOf="@+id/overflow"
        android:layout_toLeftOf="@+id/overflow"
        android:layout_alignParentBottom="true"
        style="@style/Text.Description"/>

    <ImageView
        android:id="@+id/overflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
        android:tint="@color/overflow"
        android:background="@color/selectable_item_tarnsparent"
        android:contentDescription="@string/overflow"/>

</net.mmho.photomap2.PhotoCardLayout>
