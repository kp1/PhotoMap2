<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
   <FrameLayout
       android:id="@+id/thumbnail_frame"
       android:layout_width="96dp"
       android:layout_height="96dp"
       android:padding="8dp"
       android:layout_alignParentLeft="true">
       <net.mmho.photomap2.ThumbnailImageView
            android:id="@+id/thumbnail"
            android:src="@android:drawable/ic_menu_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </FrameLayout>

    <net.mmho.photomap2.GeocodeTextView
        android:id="@+id/title"
        android:layout_toRightOf="@id/thumbnail_frame"
        android:layout_toLeftOf="@+id/overflow"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"/>

    <ImageView
        android:id="@+id/overflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/abc_ic_menu_moreoverflow_normal_holo_light"/>

</RelativeLayout>
